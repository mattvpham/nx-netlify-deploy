{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/site-a",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/site-a",
        "outputPath": "dist/apps/site-a"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "site-a:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "site-a:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "site-a:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "site-a:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/site-a"],
      "options": {
        "jestConfig": "apps/site-a/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/site-a/**/*.{ts,tsx,js,jsx}"]
      }
    },

    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "cp apps/site-a/netlify.toml ./netlify.toml"
          },
          {
            "command": "NETLIFY_SITE_ID=$SITE_A_SITE_ID netlify deploy --build --prod | tee -a netlify-deploy.txt"
          }
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
